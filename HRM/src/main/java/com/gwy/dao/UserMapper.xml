<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gwy.dao.UserMapper" >
    <insert id="addUser">
        INSERT INTO HRM_USER VALUES(USER_SEQ.nextval,#{uname},#{upass})
    </insert>

    <select id="getUser" resultMap="userMap">
        SELECT * FROM HRM_USER WHERE UNAME=#{uname} and upass=#{upass}
    </select>
    <select id="getUserByName" resultMap="userMap">
        SELECT * FROM HRM_USER where UNAME=#{uname}
    </select>
    <resultMap id="userMap" type="com.gwy.model.User">
        <id property="uid" column="UID"/>
        <result property="uname" column="UNAME"/>
        <result property="upass" column="UPASS"/>
    </resultMap>
</mapper>
