<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gwy.dao.Recruit_InformationMapper" >

    <select id="getRecruit_InformationByRiState" resultType="java.lang.Integer">
        SELECT count(*) FROM HRM_RECRUIT_INFORMATION WHERE RISTATE=#{0}
    </select>
    <select id="queryCurrentPageRecruit_InformationByRiState" resultMap="recruit_InformationMap1">
        SELECT * FROM (SELECT HRM_RECRUIT_INFORMATION.*,rownum rn FROM HRM_RECRUIT_INFORMATION
        WHERE HRM_RECRUIT_INFORMATION.RISTATE=#{0}) RI,HRM_DEPARTMENT,HRM_JOB
        WHERE RI.DID=HRM_DEPARTMENT.DID
        AND RI.JID=HRM_JOB.JID
        and rn between #{1} and #{2}
    </select>
    <resultMap id="recruit_InformationMap" type="com.gwy.model.Recruit_Information">
        <id property="riid" column="RIID"/>
        <result property="riNum" column="RINUM"/>
        <result property="riIntro" column="RIINTRO"/>
        <result property="riState" column="RISTATE"/>
        <result property="riDate" column="RIDATE"/>
    </resultMap>
    <resultMap id="recruit_InformationMap1" type="com.gwy.model.Recruit_Information" extends="recruit_InformationMap">
        <association property="department" javaType="com.gwy.model.Department" column="DID">
            <id property="did" column="DID"/>
            <result property="dname" column="DNAME"/>
            <result property="ddate" column="DDATE"/>
        </association>
        <association property="job" javaType="com.gwy.model.Job" column="JID">
            <id property="jid" column="JID"/>
            <result property="jname" column="JNAME"/>
            <result property="jsalary" column="JSALARY"/>
        </association>
    </resultMap>
</mapper>
